<section class="cart">
    <%if (session.cart){%>
    <div class="order container mx-auto w-1/2">
        <div class="flex items-center border-b border-grey-300 pb-5">
            <img src="/img/cart.png" alt="">
            <h1 class="font-bold ml-4 text -3xl">Order Summary</h1>
        </div>
        <div class="foodList">
            <% for(let food of Object.values(session.cart.items)){%>

            <div class="flex items-center my-8">
                <img class="w-24" src="/img/<%= food.item.image %>" alt="">
                    <div class=" flex-1 ml-4">
                        <h1><%= food.item.name %></h1>
                    <span ><%= food.item.size %></span>
                    </div>
                <span class="flex-1"><%= food.qty %></span>
                <span class="font-bold text-lg">£<%= food.item.price * food.qty %></span>
            </div>
            <% } %>
        </div>
        <hr>
        <div class="text-right  py-4">
            <div>
                <span class="text-lg font-bold">Total Amount</span>
                <span class="totalPrice text-2xl font-bold ml-2">£<%= session.cart.totalPrice %></span>
            </div>
        </div>
        <% if(user){%>
        <div>
            <form action="/orders"  method = "POST" class="mt-12">
                <input name="phone" class="border border-gray-400 p-2 w-1/2 mb-4" type="text " placeholder="Phone Number">
                <input name="address"class="border border-gray-400 p-2 w-1/2 mb-4" type="text " placeholder="address">
                <div>
                     <button class="btnOrder px-6 py-2 rounded-full text-white font-bold mt-6" type="submit">Order now</button> 
                </div>
            </form>
        </div>
        <%} else {%>
        <a href="/login" class="inline-block cursor-pointer btnOrder px-6 py-2 rounded-full text-white font-bold mt-6">Please log into continue</a>
        <% } %>
    </div>
    <%} else {%>
    <div class="cart-empty">
        <div class="container mx-auto text center">
            <h1 class="text-3xl font-bold mb-2">Browse our menu and start adding items to your order</h1>
            <P class="text-gray-500 text-lg mb-12"> It seems like you haven't selected any items from the menu,<br> Go the main page.</P>
            <img class="w-1/5 mx-auto" src="/img/empty-cart-sad.png" alt="empty-cart-sad">
            <a href="/" class="inline-block px-6 py-2 rounded-full btnOrder text-white font-bold mt-12">Go Back</a>
    
        </div>
    </div>
    <%}%>
</section>